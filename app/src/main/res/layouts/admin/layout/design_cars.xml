<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16sp"
            >
            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/bg"
                android:scaleType="fitCenter"
                android:layout_marginRight="10sp"

                />
            <LinearLayout
                android:layout_toEndOf="@+id/imgCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/description"
                >
                <TextView
                    android:layout_toEndOf="@+id/imgCar"
                    android:id="@+id/carName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Mobil"
                    android:textColor="@color/nliveo_orange_colorPrimaryDark"
                    android:textSize="14sp"
                    android:layout_marginBottom="10sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    />
                <TextView
                    android:id="@+id/price"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Rp. 100.000"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8sp"
                    android:padding="10sp"
                    android:textAlignment="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8sp"
                    >
                    <ImageView
                        android:id="@+id/ic_year"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/ic_action_event"
                        android:layout_marginRight="10sp"
                        />
                    <TextView
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="2017"
                        android:textColor="@color/nliveo_orange_colorPrimaryDark"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8sp"
                    >
                    <ImageView
                        android:id="@+id/ic_capacity"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/ic_action_cc_bcc"
                        android:layout_marginRight="10sp"
                        />
                    <TextView
                        android:id="@+id/capacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="8"
                        android:textColor="@color/nliveo_orange_colorPrimaryDark"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8sp"
                    >
                    <ImageView
                        android:id="@+id/ic_color"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/ic_action_event"
                        android:layout_marginRight="10sp"
                        />
                    <TextView
                        android:id="@+id/color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="White"
                        android:textColor="@color/nliveo_orange_colorPrimaryDark"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8sp"
                    >
                    <ImageView
                        android:id="@+id/ic_bensin"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/ic_action_event"
                        android:layout_marginRight="10sp"
                        />
                    <TextView
                        android:id="@+id/bensin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Premium"
                        android:textColor="@color/nliveo_orange_colorPrimaryDark"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_below="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:background="@color/nliveo_orange_colorPrimaryDark"
                    android:paddingLeft="45sp"
                    android:paddingRight="45sp"
                    android:text="Pesan"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>